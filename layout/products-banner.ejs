<div class="flex">
  <div class="w-1/2 grow">
    <picture>
      <source
        srcset="<%= page === 'optical' ? '../assets/images/product-header-sm-1.png' : '../assets/images/product-header-sm-3.png' %>"
        media="(max-width: 992px)"
      />
      <img
        src="<%= page === 'optical' ? '../assets/images/product-header-1.png' : '../assets/images/product-header-3.png' %>"
        alt="glasses banner"
        class="w-full"
      />
    </picture>
  </div>

  <div class="w-1/2 grow">
    <picture>
      <source
        srcset="<%= page === 'optical' ? '../assets/images/product-header-sm-2.png' : '../assets/images/product-header-sm-4.png' %>"
        media="(max-width: 992px)"
      />
      <img
        src="<%= page === 'optical' ? '../assets/images/product-header-2.png' : '../assets/images/product-header-4.png' %>"
        alt="glasses banner"
        class="w-full"
      />
    </picture>
  </div>
